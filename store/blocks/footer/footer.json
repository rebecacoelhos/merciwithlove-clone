{
  "footer": {
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },
  "footer-layout.desktop": {
    "children": [
      "flex-layout.row#footer-1-desktop",
      "flex-layout.row#footer-2-desktop",
      "vtex.menu@2.x:menu#footer",
      "flex-layout.row#footer-4-desktop"
    ]
  },
  "flex-layout.row#footer-1-desktop": {
    "children": [
      "vtex.menu@2.x:menu#Products",
      "vtex.menu@2.x:menu#footer-clothing",
      "vtex.menu@2.x:menu#footer-decoration",
      "vtex.menu@2.x:menu#footer-bags",
      "vtex.menu@2.x:menu#footer-enxoval",
      "footer-spacer"
    ],
    "props": {
      "blockClass": "menu-row",
      "paddingTop": 6,
      "paddingBottom": 8,
      "preventHorizontalStretch": true
    }
  },

  "social-networks": {
    "props": {
      "socialNetworks": [
        {
          "name": "Facebook",
          "url": "https://www.facebook.com/vtexonline/"
        },
        {
          "name": "Instagram",
          "url": "https://www.instagram.com/vtextruecloud/"
        },
        {
          "name": "Twitter",
          "url": "https://twitter.com/vtexonline"
        },
        {
          "name": "Youtube",
          "url": "https://www.youtube.com/user/VTEXTV"
        }
      ],
      "title": "Redes Sociais"
    }
  },

  "flex-layout.row#footer-2-desktop": {
    "children": ["image#visa", "image#mastercard", "image#elo", "image#dinner", "image#american"],
    "props": {
      "blockClass": "payment-methods",
      "preventHorizontalStretch": true,
      "preventVerticalStretch": true
    }
  },

  "image#visa": {
    "props": {
      "src": "https://merciwithlove.vteximg.com.br/arquivos/icone-visa.png?v=636845296112970000"
    }
  },
  "image#mastercard": {
    "props": {
      "src": "https://merciwithlove.vteximg.com.br/arquivos/icone-master.png?v=636845295859630000"
    }
  },
  "image#elo": {
    "props": {
      "src": "https://merciwithlove.vteximg.com.br/arquivos/icone-elo.png?v=636845295027170000"
    }
  },
  "image#dinner": {
    "props": {
      "src": "https://merciwithlove.vteximg.com.br/arquivos/icone-diners.png?v=636845292218770000"
    }
  },
  "image#american": {
    "props": {
      "src": "https://merciwithlove.vteximg.com.br/arquivos/icone-american.png?v=636845290941700000"
    }
  },
  "vtex.menu@2.x:menu#footer": {
    "props": {
      "orientation": "vertical"
    },
    "children": [
     "flex-layout.row#footer"
    ]
  },
  "flex-layout.row#footer": {
    "children": [
      "flex-layout.col#footer"
    ]
  },
  "flex-layout.col#footer": {
    "children": [
      "rich-text#footer1",
      "rich-text#footer2",
      "rich-text#footer3"
    ]
  },
  "rich-text#footer1": {
    "props": {
      "text": "© 2016 , Merci with Love - Todos os direitos reservados",
      "textAlignment": "CENTER",
      "textPosition": "CENTER",      
      "blockClass": "footer"
    }
  },
  "rich-text#footer2": {
    "props": {
      "text": "Rua Ministro Orozimbo Nonato nº 102, sala 1104 - Nova Lima/MG | CEP: 34006-053 | CNPJ: 22.663.945/0001-26 | Telefone: (31) 3517-8129",
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "blockClass": "footer"
    }
  },
  "rich-text#footer3": {
    "props": {
      "text": "Todas as marcas e suas imagens são de propriedade de seus respectivos donos. É vedada a reprodução, total ou parcial, de qualquer conteúdo sem expressa autorização.",
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "blockClass": "footer"
    }
  },
  "flex-layout.row#footer-4-desktop": {
    "children": ["image#b2b", "image#acct", "image#vtex"],
    "props": {
      "blockClass": "footer-images",
      "preventHorizontalStretch": true
    }
  },
  "image#b2b": {
    "props": {
      "src": "https://merciwithlove.vteximg.com.br/arquivos/logo-b2u.png?v=637106441517970000"
    }
  },
  "image#acct": {
    "props": {
      "src": "https://merciwithlove.vteximg.com.br/arquivos/logo-acct.png?v=636849882457200000"
    }
  },
  "image#vtex": {
    "props": {
      "src": "https://merciwithlove.vteximg.com.br/arquivos/logo-vtex-footer.png?v=636845298025900000"
    }
  },

  "footer-layout.mobile": {
    "children": [
      "flex-layout.row#1-footer-mobile",
      "flex-layout.row#2-footer-mobile"
    ]
  },
  "flex-layout.row#2-footer-mobile": {
    "children": ["flex-layout.col#footer-1-mobile"],
    "props": {
      "paddingTop": 4
    }
  },
  "flex-layout.col#footer-1-mobile": {
    "children": [
      "flex-layout.row#footer-methods-mobile",
      "rich-text#footer-mobile1",
      "rich-text#footer-mobile2",
      "rich-text#footer-mobile3",
      "flex-layout.row#footer-4-mobile"
    ],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4,
      "rowGap": 4
    }
  },
  "flex-layout.row#footer-methods-mobile": {
    "children": ["image#visa", "image#mastercard", "image#elo", "image#dinner", "image#american"],
    "props": {
      "blockClass": "payment-methods",
      "preventHorizontalStretch": true,
      "preventVerticalStretch": true
    }
  },
  "flex-layout.row#1-footer-mobile": {
    "props": {
      "paddingTop": 4,
      "blockClass": "menu-row"
    },
    "children": ["vtex.menu@2.x:menu#footer-mobile"]
  },
  "rich-text#footer-mobile1": {
    "props": {
      "text": "© 2016 , Merci with Love - Todos os direitos reservados",
      "textAlignment": "CENTER",
