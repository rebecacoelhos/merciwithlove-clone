    }
  },
  "rich-text#footer-mobile2": {
    "props": {
      "text": "Rua Ministro Orozimbo Nonato nº 102, sala 1104 - Nova Lima/MG | CEP: 34006-053 | CNPJ: 22.663.945/0001-26 | Telefone: (31) 3517-8129",
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "blockClass": "footer"
    }
  },
  "rich-text#footer-mobile3": {
    "props": {
      "text": "Todas as marcas e suas imagens são de propriedade de seus respectivos donos. É vedada a reprodução, total ou parcial, de qualquer conteúdo sem expressa autorização.",
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "blockClass": "footer"
    }
  },
  "flex-layout.row#footer-4-mobile": {
    "children": ["image#b2b", "image#acct", "image#vtex"],
    "props": {
      "blockClass": "footer-images",
      "preventHorizontalStretch": true
    }
  }
